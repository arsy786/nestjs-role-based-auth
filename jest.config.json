{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/controllers/**/*.ts", "**/services/**/*.ts"],
  "coverageDirectory": "./coverage",
  "coveragePathIgnorePatterns": ["/node_modules/", "/dist/"],
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "branches": 80,
      "functions": 80,
      "lines": 80
    }
  },
  "testEnvironment": "node"
}
