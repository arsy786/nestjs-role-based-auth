{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageDirectory": "./coverage-e2e",
  "coverageProvider": "v8",
  "coverageReporters": ["text", "lcov"],
  "collectCoverageFrom": ["src/**/*.ts", "!**/node_modules/**", "!**/test/**"]
}
